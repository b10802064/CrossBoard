@model cross_border.ViewModels.RegisterViewModel
@{
    string title = ViewData["Title"].ToString();
    string previousPageUrl = Context.Request.Headers["Referer"].ToString();
}

<button id="modalBtn" type="button" style="display:none;" data-bs-toggle="modal" data-bs-target="#myModal"></button>

<!-- 模态框 -->
<div class="modal" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                    @if (!String.IsNullOrEmpty(ViewData["Title"].ToString()))
                    {
                        <h5 class="modal-title">@ViewData["Title"]</h5>
                    }
                <a type="button" href="@previousPageUrl" class="btn-close"  aria-label="Close"></a>
            </div>
            <div class="modal-body">
                @if (!String.IsNullOrEmpty(ViewData["Message"].ToString()))
                {
                    <p>@ViewData["Message"]</p>
                }
            </div>
            <div class="modal-footer">
                <a href="@previousPageUrl" class="btn btn-secondary">关闭</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // 页面加载时触发显示模态框
    window.addEventListener('DOMContentLoaded', function () {
        var modalBtn = document.getElementById('modalBtn');
        modalBtn.click();
    });
</script>

@section topCSS{
    <link href="~/css/skeuomorphicdialog.css" rel="stylesheet" />
}