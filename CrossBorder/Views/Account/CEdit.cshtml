@model CrossBorder.Models.Customer

@{
    ViewData["Title"] = "CEdit";
}
<div class="customercontainer_2">
    <div class="customercontainer">
        <h2>會員中心</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(model => model.CustomerId)
                    <div class="form-group">
                        <label asp-for="CusdtomerName" class="control-label">帳號</label>
                        <input asp-for="CusdtomerName" class="form-control" />
                        <span asp-validation-for="CusdtomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">電子郵件</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">密碼</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Create" class="btn-70" >更新帳號訊息</button>
                    </div>
                </form>
            </div>
            <div class="col-md-8">
                <form asp-action="UserFeedBack" method="post">
                
                        <div class="form-group">
                            <label>用戶反饋</label>
                            <textarea class="form-control" rows="10" name="feedback"></textarea>
                        </div>
                        <div class="form-group mt-1">
                        <button type="submit" class="btn-70">提交</button>
                        </div>
                
                </form>
            </div>
        </div>
    </div>
</div>


@section topCSS{
    <link href="~/css/Customer.css" rel="stylesheet" />
}